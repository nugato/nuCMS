{% extends '@NugatoNuCms/Web/Layout/containerWidth.html.twig' %}

{% block title %}
    {{ page.metaTitle is not empty ? page.metaTitle : parent() }}
{% endblock %}
{% block meta_description %}
    {{ page.metaDescription is not empty ? page.metaDescription : parent() }}
{% endblock %}

{% block content %}

    <article class="mt-5">
        <header class="mb-3">
            <h1 class="t-page_title_div">{{ page.title|capitalize }}</h1>
            <span class="badge badge-secondary">Created at {{ page.createdAt|date('Y-m-d') }}</span>
        </header>
        <main>
            {{ page.content|raw }}
        </main>
    </article>

{% endblock %}